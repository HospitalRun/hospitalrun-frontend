{{#edit-panel editPanelProps=editPanelProps}}
    {{#em-form model=model submitButton=false }}
        <div class="form-group has-success">
            <div class="panel detail-section">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Incident Category Name
                    </h3>
                </div>
                <div class="panel-body detail-section-content">
                    <div class="row">
                        {{em-input property="incidentCategoryName" class="incident-category-name"}}
                    </div>
                </div>
            </div>
            <div class="panel detail-section">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Incident Category Item
                    </h3>
                </div>
                <div class="panel-body detail-section-content">
                    <table class="table">
                        <tr class="table-header">
                            <th>Item</th>
                            <th>{{t 'labels.actions'}}</th>
                        </tr>
                        {{#each incidentCategoryItems as |incidentCategoryItem|}}
                            <tr>
                                <td class="incident-category-item">{{incidentCategoryItem}}</td>
                                <td>
                                    <button class="btn btn-default warning" {{action 'showDeleteItem' incidentCategoryItem bubbles=false }}>
                                    <span class="octicon octicon-x"></span>Delete</button>
                                </td>
                            </tr>
                        {{/each}}
                    </table>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-default neutral" {{action 'showAddItem'}}>Add Item</button>
                </div>
            </div>
        </div>
    {{/em-form}}
{{/edit-panel}}

