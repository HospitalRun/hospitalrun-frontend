{{#unless firstQuantity}}
    <div class="row">
        <div class="col-xs-5">
            <div class="form-group required {{quantityClass}}">
                <label class="control-label">What does 1 {{unitName}} contain?</label>
            </div>
        </div>
    </div>
{{/unless}}
<div class="row">
    <div class="col-xs-3">
        <div class="form-group required {{quantityClass}}">
            {{#if firstQuantity}}
                <label class="control-label">Quantity</label>
            {{/if}}
            {{input type="text" value=quantity class="form-control"}}
            <span class="help-block">{{quantityHelp}}</span>
        </div>
    </div>


    <div class="col-xs-3">
        <div class="form-group required {{unitClass}}">
            {{#if firstQuantity}}
                <label class="control-label">Unit</label>
            {{/if}}
            {{select-list
                class='form-control'
                content=unitList
                value=unit
                action=(action (mut unit))
                prompt=" "
            }}
            <span class="help-block">{{unitHelp}}</span>
        </div>
    </div>
</div>
