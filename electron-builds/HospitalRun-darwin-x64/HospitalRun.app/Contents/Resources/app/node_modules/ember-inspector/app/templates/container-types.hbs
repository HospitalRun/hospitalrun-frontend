<div class="split">

  {{#draggable-column
          width=180
          classes="split__panel split__panel--sidebar-2 nav"}}

    <div class="split__panel__bd">
      <div class="nav__title">
        <h3>Types</h3>
      </div>

      <ul>
        {{#each sorted as |containerType|}}
          <li class="js-container-type">
            {{#link-to "container-type" containerType.name}}
              <span class="js-container-type-name">{{containerType.name}}</span>
              (<span class="js-container-type-count">{{containerType.count}}</span>)
            {{/link-to}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{/draggable-column}}

  <div class="split__panel">
    <div class="split__panel__bd">
      {{outlet}}
    </div>
  </div>
</div>
